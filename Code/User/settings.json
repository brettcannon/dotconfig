// 2020-03-11
{
    "breadcrumbs.enabled": true,
    "debug.console.wordWrap": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.definitionLinkOpensInPeek": true,
    "editor.folding": true,
    // https://www.jetbrains.com/lp/mono/
    // https://github.com/tonsky/FiraCode
    // ("editor.fontFamily": "FiraCode-Retina, 'Fira Code Retina', 'Fira Code'",
    //  "editor.fontWeight": "400")
    // https://sourcefoundry.org/hack/
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": "'ss02', 'ss03', 'ss04'", // >= & $
    "editor.fontSize": 16,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.suggest.showKeywords": true,
    "editor.renderWhitespace": "selection",
    "editor.semanticHighlighting.enabled": true,
    "editor.trimAutoWhitespace": true,
    "extensions.ignoreRecommendations": true,
    "files.defaultLanguage": "${activeEditorLanguage}",
    "files.eol": "\n",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/.eggs": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
        "**/node_modules": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.inputValidation": "off",
    "git.untrackedChanges": "separate",
    "problems.showCurrentInStatus": true,
    "outline.showModules": false,
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    //"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    //"terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    // Monoaki Pro requires a license (which is stored locally within VS Code).
    "workbench.colorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Icons",
    "workbench.editor.tabSizing": "shrink",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.tree.renderIndentGuides": "onHover",
    // Language-specific
    "[elixir]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.rulers": []
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[plaintext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    "[restructuredtext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.rulers": [
            100
        ]
    },
    "[yaml]": {
        "editor.rulers": []
    },
    // Extensions
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": false,
    "npm.enableScriptExplorer": true,
    "python.insidersChannel": "daily",
    "python.jediEnabled": true,
    "python.languageServer": "Jedi",
    "python.linting.enabled": false,
    "same-settings.githubBlobURL": "https://github.com/brettcannon/dotconfig/blob/master/Code/User/settings.json"
}
