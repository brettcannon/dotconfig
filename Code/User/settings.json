// 2020-01-01
{
    "breadcrumbs.enabled": true,
    "debug.console.wordWrap": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.folding": true,
    // https://github.com/tonsky/FiraCode
    // https://sourcefoundry.org/hack/
    "editor.fontFamily": "FiraCode-Retina, 'Fira Code Retina', 'Fira Code', Hack",
    "editor.fontLigatures": "'ss02', 'ss03', 'ss04'", // >= & $
    "editor.fontSize": 16,
    "editor.fontWeight": "400",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.suggest.showKeywords": true,
    "editor.renderWhitespace": "selection",
    "editor.trimAutoWhitespace": true,
    "extensions.ignoreRecommendations": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/.eggs": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
        "**/node_modules": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.inputValidation": "off",
    "git.untrackedChanges": "separate",
    "problems.showCurrentInStatus": true,
    "outline.showModules": false,
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    //"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    //"terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    // Monoaki Pro requires a license (which is stored locally within VS Code).
    "workbench.colorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Icons",
    "workbench.editor.tabSizing": "shrink",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.tree.renderIndentGuides": "onHover",
    // Language-specific
    "[elixir]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.rulers": []
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[plaintext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    "[restructuredtext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.rulers": [
            100
        ]
    },
    "[yaml]": {
        "editor.rulers": []
    },
    // Extensions
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": false,
    "npm.enableScriptExplorer": true,
    "python.jediEnabled": true,
    //"python.analysis.downloadChannel": "daily",
    //"python.analysis.cachingLevel": "None",
    "python.insidersChannel": "daily",
    "sameSettings.URLs.GitHubBlobURL": "https://github.com/brettcannon/dotconfig/blob/master/Code/User/settings.json",
    // IntelliCode
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
