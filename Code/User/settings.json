// 2019-07-30
{
    "breadcrumbs.enabled": true,
    "debug.console.wordWrap": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.folding": true,
    // https://github.com/tonsky/FiraCode
    // https://sourcefoundry.org/hack/
    "editor.fontFamily": "'Fira Code', Hack",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    // Fira Code: 400 is Regular and
    // 600 is Retina **or** Bold,
    // so only install one of them.
    "editor.fontWeight": "600",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.suggest.filteredTypes": {
        "keyword": true
    },
    "editor.trimAutoWhitespace": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/.eggs": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
        "**/node_modules": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    //"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    //"terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    // Monoaki Pro requires a license (which is stored locally within VS Code).
    "workbench.colorTheme": "Monokai Pro", "workbench.iconTheme": "Monokai Pro Icons",
    "workbench.editor.tabSizing": "shrink",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.tree.renderIndentGuides": "onHover",
    // Language-specific
    "[elixir]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.rulers": []
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[plaintext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    "[restructuredtext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.rulers": []
    },
    "[yaml]": {
        "editor.rulers": []
    },
    // Extensions
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": false,
    "npm.enableScriptExplorer": true,
    "python.jediEnabled": false,
    "python.analysis.downloadChannel": "beta",
    "python.insidersChannel": "daily"
}
