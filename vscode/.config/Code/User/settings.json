// 2018-05-03
{
    "editor.acceptSuggestionOnEnter": "off",
    "editor.folding": true,
    "editor.fontFamily": "Hack, Consolas, Menlo, Monaco, 'Courier New', monospace",
    "editor.minimap.renderCharacters": false,
    "editor.rulers": [
        80,
        100
    ],
    "editor.trimAutoWhitespace": true,
    "files.defaultLanguage": "python",
    "files.eol": "\n",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.eggs": true,
        "**/*.egg-info": true,
        "**/.coverage": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": false,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
    "gitlens.gitExplorer.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.statusBar.enabled": false,
    "npm.enableScriptExplorer": true,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    //"C:\\Program Files\\PowerShell\\6.0.0\\pwsh.exe",
    //"C:\\Windows\\System32\\cmd.exe",
    // Maybe pass args to bash to launch fish?
    //"C:\\Windows\\System32\\bash.exe",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Solarized Light",
    "workbench.editor.tabSizing": "shrink",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "[json]": {
        "editor.rulers": []
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": false, // Turns out intellisense for Markdown, etc.
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[plaintext]": {
        "editor.quickSuggestions": {
            "other": false, // Turns out intellisense for Markdown, etc.
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    "[restructuredtext]": {
        "editor.quickSuggestions": {
            "other": false, // Turns out intellisense for Markdown, etc.
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            80
        ]
    },
    "[typescript]": {
        "editor.rulers": [
            80
        ]
    },
    "[yaml]": {
        "editor.rulers": []
    }
}
