// 2017-01-16
{
    "editor.acceptSuggestionOnEnter": "off",
    "editor.folding": true,
    "editor.fontFamily": "Hack, Consolas, Menlo, Monaco, 'Courier New', monospace",
    "editor.minimap.renderCharacters": false,
    "editor.rulers": [
        70,
        80,
        100
    ],
    "editor.trimAutoWhitespace": true,
    "files.defaultLanguage": "python",
    "files.eol": "\n",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.eggs": true,
        "**/*.egg-info": true,
        "**/.coverage": true,
        "**/env": true,
        "**/venv": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    // Unnecessary once https://github.com/Microsoft/vscode-python/issues/554 is fixed.
    "python.linting.pylintArgs": [
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,unused-wildcard-import,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode"
    ],
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "terminal.integrated.shell.windows":
        "C:\\Program Files\\PowerShell\\6.0.0\\pwsh.exe",
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Material Theme",
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "vscode-icons",
    "workbench.statusBar.visible": true,
    "[json]": {
        "editor.rulers": []
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": false,  // Turns out intellisense for Markdown, etc.
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            70
        ]
    },
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    "[plaintext]": {
        "editor.quickSuggestions": {
            "other": false,  // Turns out intellisense for Markdown, etc.
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            70
        ]
    },
    "[restructuredtext]": {
        "editor.quickSuggestions": {
            "other": false,  // Turns out intellisense for Markdown, etc.
            "comments": false,
            "strings": false
        },
        "editor.rulers": [
            70
        ]
    },
    "[typescript]": {
        "editor.rulers": [
            80
        ]
    },
    "[yaml]": {
        "editor.rulers": []
    }
}
